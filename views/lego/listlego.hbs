<div class="container mt-5">
    <h2 class="mb-4">Lego List</h2>
    <a href="/" class="btn btn-warning mb-3">
        <i class="fa-solid fa-angle-left"></i>
    </a>
    <a href="/lego/create" class="btn btn-success mb-3">
        <i class="fa-solid fa-plus"></i>
        <i class="fa-solid fa-puzzle-piece"></i>
    </a>

    <form action="/lego/search" method="post">
        <label for="">Search Description: </label>
        <input type="search" name="searchkey">
    </form>

    <select name="" onchange="window.location.href=this.value">
        <option value="">
            Select by option
        </option>
        <option value="lego/sort/year/asc">
            Year asc
        </option>
        <option value="lego/sort/year/desc">
            Year desc
        </option>
    </select>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="text-center">
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Image</th>
                    <th>Material</th>
                    <th>Detail</th>
                    <th>Year</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each lego}}
                <tr>
                    <td>{{ name }}</td>
                    <td>{{ brand }}</td>
                    <td><img src="{{ image }}" alt="{{ name }}" width="50"></td>
                    <td>{{ material }}</td>
                    <td>{{ detail }}</td>
                    <td>{{ year }}</td>
                    <td>{{ quantity }}</td>
                    <td>{{ price }}</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a href="/lego/update/{{ _id }}" class="btn btn-sm btn-warning me-2">
                                <i class="fa-solid fa-pencil"></i>
                            </a>
                            <a href="/lego/delete/{{ _id }}" class="btn btn-sm btn-danger">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>